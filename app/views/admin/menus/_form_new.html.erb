<%= form_for [:admin, @menu], remote: true do |f| %>
  <div id="errors"></div>

  <div class="form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :image %><br />
    <%= f.file_field :image %>
  </div>

  <div class="form-group">
    <%= f.label :description %><br />
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Submit", class: "btn btn-success form-cru" %>
    <i class="fa fa-spinner fa-spin"></i>
  </div>
<% end %>
